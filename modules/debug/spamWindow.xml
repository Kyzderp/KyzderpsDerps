<GuiXml>
    <Controls>
<!-- ======================================================================================================================= -->
        <TopLevelControl name="KDDSpam" clampedToScreen="false" mouseEnabled="false" movable="true" hidden="true">
            <Dimensions x="520" y="700"/>
            <Anchor point="LEFT" relativeTo="GuiRoot" relativePoint="RIGHT" offsetX="0" offsetY="-70"/>
            <Controls>
                <Control name="$(parent)Sidebar" mouseEnabled="true">
                    <Dimensions x="30"/>
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT"/>
                    <Controls>
                        <Backdrop name="$(parent)Backdrop" centerColor="99000000" edgeColor="00000000">
                            <AnchorFill/>
                            <Edge edgeSize="1"/>
                        </Backdrop>
                        <Label name="$(parent)Label" font="ZoFontGameBold" text="Derps Spam" horizontalAlignment="LEFT">
                            <Dimensions x="400"/>
                            <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetY="0"/>
                            <OnInitialized>
                                self:SetTransformRotationZ(math.rad(90))
                            </OnInitialized>
                        </Label>
                    </Controls>
                    <OnMouseUp>
                        KyzderpsDerps.OnSpamSidebarClicked()
                    </OnMouseUp>
                </Control>
                <TextBuffer name="$(parent)Buffer" font="ZoFontGameSmall" linkEnabled="false" maxHistoryLines="200">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"/>
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="10"/>
                </TextBuffer>
                <Backdrop name="$(parent)Backdrop" centerColor="75000000" edgeColor="00000000">
                    <AnchorFill/>
                    <Edge edgeSize="1"/>
                </Backdrop>
            </Controls>
        </TopLevelControl>

    </Controls>
</GuiXml>
